<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/resturnatPickupBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/yellow_button"
                        app:layout_constraintEnd_toEndOf="@+id/restaurantClaimBtn"
                        app:layout_constraintStart_toStartOf="@+id/restaurantClaimBtn"
                        app:layout_constraintTop_toBottomOf="@+id/restaurantClaimBtn">


                        <com.android.mealpass.widgets.CustomTextView
                            android:id="@+id/textView4"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="0dp"
                            android:background="@drawable/left_shape_of_button"
                            android:gravity="center"
                            android:text="2."
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.android.mealpass.widgets.CustomTextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"

                            android:text="@string/restaurant_pick_up_time"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView4"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/restaurantClaimBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@drawable/red_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.android.mealpass.widgets.CustomTextView
                            android:id="@+id/customTextView"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="0dp"
                            android:background="@drawable/left_shape_of_red_button"
                            android:gravity="center"
                            android:text="1."
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.android.mealpass.widgets.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:text="@string/restaurant_claim_meals"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/customTextView"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/resturantEnjoyMealBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/green_button"
                        app:layout_constraintEnd_toEndOf="@+id/resturnatPickupBtn"
                        app:layout_constraintStart_toStartOf="@+id/resturnatPickupBtn"
                        app:layout_constraintTop_toBottomOf="@+id/resturnatPickupBtn">

                        <com.android.mealpass.widgets.CustomTextView
                            android:id="@+id/customTextView2"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="0dp"
                            android:background="@drawable/left_shape_of_green_button"
                            android:gravity="center"
                            android:text="3."
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_16ssp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.android.mealpass.widgets.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="start|center_vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"

                            android:text="@string/swipe_receipt_at_resaurant"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/customTextView2"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nextBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_26sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:text="@string/Next"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/resturantEnjoyMealBtn"
                        app:layout_constraintStart_toStartOf="@+id/resturantEnjoyMealBtn"
                        app:layout_constraintTop_toBottomOf="@+id/resturantEnjoyMealBtn"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </ScrollView>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_60sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
