<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.android.mealpass.view.merchant.viewmodel.MerchantPortionModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_gray">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:background="?attr/colorPrimary"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:minHeight="?attr/actionBarSize"
            android:padding="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
            app:title="@string/UpdateDetail"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@android:color/white"/>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/activity_notificaion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                tools:context="com.android.mealpass.merchant.MerchantPortion">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.android.mealpass.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:layout_centerVertical="true"
                        android:text="@string/CloseSale"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:background="@{vm.isOpen == 1 ?  @drawable/ic_switch_off_green  :  @drawable/ic_switch_on}"
                        android:id="@+id/switcher"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       />
                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="start"
                    android:fontFamily="@font/georgia"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="@string/UpdateRetailPrice" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">



                    <com.android.mealpass.widgets.CustomTextView
                        android:id="@+id/retailLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="@{String.format(@string/RetailPrice,vm.currency)}"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <com.android.mealpass.widgets.CustomEditText
                        android:id="@+id/inputRetailPrice"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="40dp"
                        android:textColor="@android:color/black"
                        android:textAllCaps="false"
                        android:textColorHint="@android:color/darker_gray"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:maxLines="1"
                        android:text="@={vm.retailPrice}"
                        android:maxLength="8"
                        android:inputType="number|numberDecimal"
                        android:hint="@string/EnterAmount"
                        android:background="@drawable/background_btn"
                        />

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/retailPriceBtn"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@android:color/white"
                    android:text="@string/RetailPriceLabel"
                    android:textAllCaps="false" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="start"
                    android:fontFamily="@font/georgia"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:text="@string/ReduceTodayPrice"
                  />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"

                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <com.android.mealpass.widgets.CustomTextView
                        android:id="@+id/updated_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:text="@{String.format(@string/PortionIsNowSellingFor,vm.currency)}"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <com.android.mealpass.widgets.CustomEditText
                        android:id="@+id/PortionAmt"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="40dp"
                        android:textColor="@android:color/black"
                        android:textAllCaps="false"
                        android:textColorHint="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="@={vm.costPrice}"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:maxLines="1"
                        android:maxLength="8"
                        android:inputType="number|numberDecimal"
                        android:hint="@string/EnterAmount"
                        android:background="@drawable/background_btn"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">



                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/twentyfive"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/darkgray"
                        android:background="@drawable/buttonbackground"
                        android:text="25%"
                        android:visibility="gone"
                        android:textAllCaps="false" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fiftyper"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/darkgray"
                        android:background="@drawable/buttonbackground"
                        android:text="50%"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/seventyper"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/darkgray"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/white"
                        android:text="75%"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/free"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/darkgray"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:color/white"
                        android:text="@string/Free"
                        android:textAllCaps="false" />

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/OR"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update_price"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@android:color/white"
                    android:text="@string/UpdateCostPrice"
                    android:textAllCaps="false" />



                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/georgia"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:text="@string/RegulateFixedAmount"
                    android:textColor="@android:color/black" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/minusCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bordercolor"
                            android:padding="10dp"
                            app:srcCompat="@drawable/ic_minus"
                            android:textColor="@color/darkgray" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <com.android.mealpass.widgets.CustomTextView
                            android:id="@+id/portion"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bordercolor"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@{``+vm.remainingPortion}"
                            android:textColor="@color/darkgray" />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/plusCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bordercolor"
                            android:padding="10dp"
                            app:srcCompat="@drawable/ic_add"
                            android:textColor="@android:color/black" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_portion"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textColor="@android:color/white"
                    android:text="@string/updatePortion"
                    android:textSize="@dimen/_10ssp"
                    android:textAllCaps="false" />




                <com.android.mealpass.widgets.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="40dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>