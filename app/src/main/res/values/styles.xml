<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryDark">@color/darkgray</item>
        <item name="colorAccent">@color/red_color</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="materialButtonStyle">@style/Button</item>

        <item name="textInputStyle">@style/LoginTextInputLayoutStyle</item>
    </style>


    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/darkgray</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/georgia</item>
    </style>

    <style name="checkboxStyle">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/georgia</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/georgia</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:height">@dimen/_30sdp</item>
        <item name="elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/georgia</item>
        <item name="backgroundTint">@color/light_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#33000000</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/darkgray</item>
    </style>

    <style name="tabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/georgia</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_5ssp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_5ssp</item>
        <item name="android:textColor">@color/light_red</item>
    </style>


</resources>
